.card {
  margin: 40rpx 20rpx;
  padding: 30rpx;
  background-color: white;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.card-title {
  font-size: 20px;
  margin-bottom: 20rpx;
}
.card-date {
  font-size: 14px;
  color: #ccc;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #ccc; 
  margin-bottom: 20rpx;
}
.card-img {
  width: 100%;
  height: 300rpx;
}
.card-desc {
  font-size: 16px;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ccc; 
}
.card-detil {
  font-size: 14px;
  color: #ccc;
  padding-top: 20rpx;
}
