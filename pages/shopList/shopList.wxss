.shop {
  background-color: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  align-items: center;
  position: relative;
}
.shop-img {
  width: 150rpx;
  height: 150rpx;
}
.shop-info {
  width: 530rpx;
  padding-left: 20rpx;
  font-size: 12px;
  color: #666;
  display: flex;
  flex-direction: column;
  line-height: 1.5;
}
.shop-name {
  width: 380rpx;
  color: #000;
  font-size: 14px;
}
.bottom-loading {
  font-size: 12px;
  color: #666;
  text-align: center;
  margin: 20rpx 0;
}